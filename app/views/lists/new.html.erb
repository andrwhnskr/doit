<h2>New Item</h2>
<%= form_for(@list) do |f| %>
  <% if @list.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(@list.errors.count, "error") %> errors.</h4>
      <ul>
        <% @list.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
<div>
  <%= form_group_tag(@list.errors[:title]) do %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter a title" %>
  <% end %>

  <%= form_group_tag(@list.errors[:description]) do %>
    <%= f.text_area :description, class: 'form-control', rows:'3', placeholder: "Enter a description" %>
  <% end %>
</div>

  <%= f.submit 'Save', class: 'btn btn-default center-block' %>

<% end %>
