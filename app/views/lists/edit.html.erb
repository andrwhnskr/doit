<h2>Edit Item #<%= @list.id %></h2>
<%= form_for(@list) do |f| %>
  <% if @list.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(@list.errors.count, "error") %> errors.</h4>
      <ul>
        <% @list.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<table class="table table-hover">
  <thead>
    <%= form_group_tag(@list.errors[:title]) do %>
    <tr>
      <th><%= f.text_field :title, class: 'form-control form-sans-margin', placeholder: "Enter a title" %>
      <% end %></th>
      <th>Days Left: (6)</th> <!--  change it to @list.days_left -->
      <th>Completed (X)</th> <!-- change it to @list.completed checkbox -->
    </tr>
  </thead>
  <tbody>
    <tr>
      <td colspan="3"><strong>Description: </strong><%= form_group_tag(@list.errors[:description]) do %>
        <%= f.text_area :description, class: 'form-control', rows:'3', placeholder: "Enter a description" %>
      <% end %></td>

  </tbody>
</table>
        <%= f.submit 'Save', class: 'btn btn-default' %>
    <% end %>
<%= link_to "Back to list", lists_path %>