<h3>Edit Item</h3>

  <%= form_for @list do |f| %>
  <% if @list.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(@list.errors.count, "error") %> errors.</h4>
      <ul>
        <% @list.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_group_tag(@list.errors[:title]) do %>
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: 'Title', class: "form-control" %>
  <% end %>
  <%= form_group_tag(@list.errors[:description]) do %>
    <%= f.label :description %>
    <%= f.text_area :description, placeholder: 'Description', class: "form-control", rows: '4' %>
  <% end %>
  <div class="form-group">
    <%= f.submit value: "Save", class: 'btn btn-success' %>
  </div>
  <% end %>

<div class="links"> 
  <%= link_to 'Back', list_path(@list) %> | 
  <%= link_to 'List', lists_path %>
</div>