<table class="table table-hover">
  <thead>
    <tr>
      <th class="col-md-4"> <%= @list.title %></th>
      <th>Days Left: <%= @list.days_left %></th> <!--  change it to @list.days_left -->
      <th>Completed (X)</th> <!-- change it to @list.completed checkbox -->
    </tr>
  </thead>
</table>
    
<p class="text-center"><%= @list.description %></p>

<%= link_to "Edit Item", edit_list_path, class: 'btn btn-default' %>
<%= link_to "Delete Item", list_path(@list), class: 'btn btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
<p><%= link_to "Back to list", lists_path %></p>